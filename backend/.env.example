# Backend environment variables
# Set these in your environment or in a .env file

# Azure SQL Server connection (override application.yml defaults)
# SPRING_DATASOURCE_URL=jdbc:sqlserver://your-server.database.windows.net:1433;database=YourDB;encrypt=true;trustServerCertificate=false
# SPRING_DATASOURCE_USERNAME=your-username
# SPRING_DATASOURCE_PASSWORD=your-password

# Azure Blob Storage connection string
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net

# Gmail SMTP credentials for sending emails
# SPRING_MAIL_USERNAME=your-email@gmail.com
# SPRING_MAIL_PASSWORD=your-app-specific-password

# CORS origin â€” set to your frontend URL
# APP_CORS_ORIGIN=http://localhost:3000
